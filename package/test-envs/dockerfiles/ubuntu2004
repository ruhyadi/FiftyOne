FROM ubuntu:20.04

RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --show-progress \
        apt-transport-https \
        libcurl4 \
        libglib2.0 \
        openssl \
        python3 \
        python3-pip

